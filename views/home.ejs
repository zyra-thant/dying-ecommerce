<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>
<%- include('./partials/banner.ejs') %>
  <!--==========Main Section==========-->
  <main>
    <div class="album py-5 bg-body-tertiary" id="products">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% product.forEach(function(item) { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="/assets/images/<%= item.image %>" alt="<%= item.name %>">
                            <div class="card-body">
                                <h3 class="card-title"><%= item.name %></h3>
                                <h4 class="card-text text-danger"><%= item.price %> AUD</h4>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="product/<%= item.id %>" type="button" class="btn btn-primary">View</a>
                                        <a href="product/<%= item.id %>/delete" type="button" class="btn  btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>               
                <% }); %>
            </div>
        </div>
    </div>
</main>

